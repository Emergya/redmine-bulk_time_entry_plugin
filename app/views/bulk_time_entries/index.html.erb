<h1>Bulk Time Entries</h1>

<% labelled_tabular_form_for :bulk_time_entry, @bulk_time_entry, :url => {:action => 'save'} do |f| %>
  <div id="entries">
    <%= render :partial => 'time_entry', :collection => @time_entries %>
  </div>
  <div id="add-entry">
    <%= link_to_remote  "Add another", :url => { :action => 'entry_form' }, :html => { :accesskey => 'a'} %>
  </div>
  <%= submit_tag l(:button_save) %>
<% end %>
